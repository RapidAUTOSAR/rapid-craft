{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Configure (GCC)",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-S", "${workspaceFolder}",
        "-B", "${workspaceFolder}/build",
        "-G", "Ninja",
        "-DCMAKE_TOOLCHAIN_FILE=${workspaceFolder}/toolchain-gcc.cmake"
      ]
    },
    {
      "label": "Build Analyzer",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "${workspaceFolder}/build"
      ],
      "dependsOn": "Configure (GCC)",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
